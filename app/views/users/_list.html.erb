<% if book.errors.any? %>
<%= book.errors.count %>error
<% book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
<div class="container">
<div class="row">
<div class="col-xs-3">

<h1>User info</h1>
<h3 class="profile-name"><%= user.name %></h3>
<h3 class="profile-introduction"><%= user.introduction %></h3>
    <%= attachment_image_tag user, :profile_image, size: '60x60', fallback: "no_image.jpg" %>
<%= link_to  edit_user_path(user), class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %>
<h1>New book</h1>
<%= form_for(book) do |f| %>
 
    <h4>title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <%= f.submit  %>

<% end %>

</div>

