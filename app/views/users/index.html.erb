<div class="container">
<div class="row">
<%= render 'users/list', user: @user, book: @book %>




<div class="col-xs-9">
		<h1>Users</h1>
<table class="table">
	<thead>
		<tr>
			<th>
				image
			</th>
			<th>
				name
			</th>
		</tr>
	</thead>
<tbody>
<% @users.each do |user| %>
<tr>  <td><%= attachment_image_tag user, :profile_image, size: '20x20', fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= user.introduction %></td>
      <td><%= link_to "Show" , user_path(user) %></td>
</tr>
<% end %>
</tbody>
</table>


</div>
</div>
</div>