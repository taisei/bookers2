<div class="container">
<div class="row">
<%= render 'users/list', user: @user, book: @bookes %>


<div class="col-xs-9">
<h1>Books</h1>
<table class="table">
	<thead>
		<tr>
			<th>
			</th>
			<th>
				title
			</th>
			<th>
				opinion
			</th>
		</tr>
	</thead>
	<% @books.each do |book| %>
  <tr>
	<td><%= attachment_image_tag @user, :profile_image, size: '20x20', fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
</div>
</div>
</div>