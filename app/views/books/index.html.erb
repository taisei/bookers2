<div class="container">
<div class="row">
<%= render 'users/list', user: @user, book: @book %>

<div class="col-xs-9">
	<h1>Books</h1>
<table class="table">
	<thead>
		<tr>
			<th>
			</th>
			<th>
				title
			</th>
			<th>
				body
			</th>
		</tr>
	</thead>
<tbody>
<% @books.each do |book| %>
<tr>
	  <td><%= link_to user_path(book.id) do %><%= attachment_image_tag book.user, :profile_image, size: '20x20', fallback: "no_image.jpg" %><% end %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
</tr>
<% end %>
</tbody>
</table>
</div>
</div>
</div>