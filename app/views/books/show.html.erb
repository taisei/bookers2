<div class="container">
<div class="row">
<%= render 'users/list', user: @user, book: @bookes %>

<div class="col-xs-9">
<h1>Book detail</h1>

<table class="table">

  <thead>
    <tr>
      <th>
      </th>
      <th>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
	<td><%= attachment_image_tag @book.user, :profile_image, size: '20x20', fallback: "no_image.jpg" %></td>
	<td><%= link_to @book.user.name, user_path(@book.user) %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% if @user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "削除しますか？"} %></td>
    <% end %>
  </tr>
</tbody>
</table>
</div>
</div>
</div>